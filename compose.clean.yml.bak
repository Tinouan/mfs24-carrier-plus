services:
  db:
    image: postgres:16-alpine
    container_name: msfs_db
    environment:
      POSTGRES_DB: msfs
      POSTGRES_USER: msfs
      POSTGRES_PASSWORD: msfs
    volumes:
      - db_data_fresh:/var/lib/postgresql/data
    restart: unless-stopped

  directus:
    image: directus/directus:10.13.4
    container_name: msfs_directus
    depends_on:
      - db
    environment:
      KEY: directus
      SECRET: directus
      DB_CLIENT: pg
      DB_CONNECTION_STRING: postgres://msfs:msfs@db:5432/msfs
      ADMIN_EMAIL: admin@example.com
      ADMIN_PASSWORD: Admin123!
    ports:
      - "8055:8055"
    restart: unless-stopped

  msfs_game_api:
    container_name: msfs_game_api
    build:
      context: ./game-api
    depends_on:
      - db
    environment:
      DATABASE_URL: postgresql://msfs:msfs@db:5432/msfs
      JWT_SECRET: R7Kp9QmE2LxA4VZ8sD5WcB6FJH0yNTrM1Ue3oPqGvK9
    volumes:
      - ./game-api:/app
    ports:
      - "8000:8000"
    restart: unless-stopped

  nginx:
    image: nginx:1.27-alpine
    container_name: msfs_nginx
    depends_on:
      - directus
      - msfs_game_api
    ports:
      - "8080:80"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - /volume1/docker/msfs-directus/webmap:/var/www/map:ro
    restart: unless-stopped

volumes:
  db_data_fresh:
